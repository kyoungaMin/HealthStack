/// =========================
// TKM (동의보감) Symptoms Master
// =========================

Table tkm_symptom_master {
  id bigint [pk, increment]

  tkm_code text [unique, note: "내부 코드(있으면)"]
  hanja text [note: "한자 표기"]
  korean text [not null, note: "한글 표기(현대어/원문 포함)"]
  name_en text [note: "영문명 (예: Insomnia, Dyspepsia)"]
  aliases text[] [default: `'{}'::text[]`, note: "동의어/표기 변형"]
  description text [note: "동의보감 요약/정의"]

  category text [note: "예: 소화/호흡/수면/통증 등"]
  pattern_tags text[] [default: `'{}'::text[]`, note: "예: 한/열/허/실/담/어혈 등"]

  source_book text [note: "예: 동의보감"]
  source_ref text [note: "권/편/문장/페이지 등"]

  created_at timestamptz [not null, default: `now()`]
  updated_at timestamptz [not null, default: `now()`]

  indexes {
    (category) [name: "idx_tkm_symptom_master_category"]
    (name_en) [name: "idx_tkm_symptom_master_name_en"]
    // GIN 인덱스는 DBML에서 표현이 제한적일 수 있어 문서화만 남김
    (pattern_tags) [name: "idx_tkm_symptom_master_tags", note: "GIN(pattern_tags)"]
  }
}


// =========================
// Mapping: TKM -> Modern Disease
// =========================

Table tkm_to_modern_map {
  id bigint [pk, increment]

  tkm_symptom_id bigint [not null, ref: > tkm_symptom_master.id]
  modern_disease_id bigint [not null, ref: > disease_master.id]

  mapping_strength text [not null, note: "high | medium | low"]
  mapping_type text [not null, note: "equivalent | overlap | differential | context"]

  evidence_note text [note: "왜 이렇게 매핑했는지(설명/근거)"]
  reviewer text [note: "검수자(약사/한의사/내부)"]
  reviewed_at timestamptz

  created_at timestamptz [not null, default: `now()`]
  updated_at timestamptz [not null, default: `now()`]

  indexes {
    (tkm_symptom_id, modern_disease_id) [unique, name: "uq_tkm_to_modern_map"]
    (tkm_symptom_id) [name: "idx_tkm_to_modern_tkm"]
    (modern_disease_id) [name: "idx_tkm_to_modern_modern"]
  }
}


// =========================
// Mapping: Modern Disease -> MeSH
// =========================

Table modern_to_mesh_map {
  id bigint [pk, increment]

  modern_disease_id bigint [not null, ref: > disease_master.id]

  mesh_term text [not null, note: "예: Sleep Initiation and Maintenance Disorders"]
  mesh_ui text [note: "예: D012893"]
  mesh_tree text [note: "예: F03.870.400"]

  search_role text [not null, note: "primary | secondary | context"]
  priority int [default: 100]
  note text

  created_at timestamptz [not null, default: `now()`]
  updated_at timestamptz [not null, default: `now()`]

  indexes {
    (modern_disease_id, mesh_term) [unique, name: "uq_modern_to_mesh_map"]
    (modern_disease_id, priority) [name: "idx_modern_to_mesh_modern"]
  }
}


// =========================
// PubMed Search Strategy Maps
// =========================

Table symptom_pubmed_map {
  id bigint [pk, increment]

  symptom_id bigint [not null, ref: > disease_master.id]
  keyword_en text [not null]
  mesh_term text

  search_role text [not null, note: "primary | secondary | context"]
  priority int [default: 100]
  note text

  created_at timestamptz [not null, default: `now()`]
  updated_at timestamptz [not null, default: `now()`]

  indexes {
    (symptom_id) [name: "idx_symptom_pubmed_map_symptom"]
    (symptom_id, priority) [name: "idx_symptom_pubmed_map_priority"]
    (symptom_id, keyword_en) [unique, name: "uq_symptom_pubmed_map_symptom_keyword"]
  }
}

Table ingredient_pubmed_map {
  id bigint [pk, increment]

  rep_code text [not null, ref: > foods_master.rep_code]

  ingredient_name_en text [not null]
  mesh_term text

  bioactive_compound text
  compound_mesh text

  search_role text [not null, note: "primary | compound | support"]
  priority int [default: 100]
  note text

  created_at timestamptz [not null, default: `now()`]
  updated_at timestamptz [not null, default: `now()`]

  indexes {
    (rep_code) [name: "idx_ingredient_pubmed_map_rep"]
    (rep_code, priority) [name: "idx_ingredient_pubmed_map_priority"]

    // 실제 DB는 (rep_code, ingredient_name_en, coalesce(bioactive_compound,'')) expression unique index.
    // DBML은 표현식 인덱스 제약이 있어 "논리적 유니크"로 문서화.
    (rep_code, ingredient_name_en, bioactive_compound) [unique, name: "uq_ingredient_pubmed_map_rep_ing_compound"]
  }
}

